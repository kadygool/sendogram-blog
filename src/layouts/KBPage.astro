---
import { SITE_CONFIG } from '../../site.config';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import LastUpdated from '@components/LastUpdated.astro';

export interface Props {
  title: string;
  description: string;
  updatedAt: string;
  schemaType?: 'FAQPage' | 'TechArticle' | 'HowTo';
  faqs?: Array<{ question: string; answer: string }>;
  breadcrumbs?: Array<{ name: string; url: string }>;
  slug: string;
}

const {
  title,
  description,
  updatedAt,
  schemaType = 'TechArticle',
  faqs = [],
  breadcrumbs,
  slug,
} = Astro.props;

const canonicalUrl = `${SITE_CONFIG.siteUrl}/kb/${slug}/`;
const ogImage = `${SITE_CONFIG.siteUrl}${SITE_CONFIG.ogImage}`;

// JSON-LD для FAQPage
const faqSchema = schemaType === 'FAQPage' && faqs.length > 0 ? {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map(faq => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
} : null;

// JSON-LD для TechArticle/HowTo
const articleSchema = schemaType !== 'FAQPage' ? {
  '@context': 'https://schema.org',
  '@type': schemaType,
  headline: title,
  description: description,
  dateModified: updatedAt,
  author: {
    '@type': 'Organization',
    name: 'Sendogram',
    url: SITE_CONFIG.appUrl,
  },
  publisher: {
    '@type': 'Organization',
    name: 'Sendogram',
    logo: {
      '@type': 'ImageObject',
      url: `${SITE_CONFIG.siteUrl}/logo.png`,
    },
  },
} : null;

// BreadcrumbList JSON-LD
const breadcrumbItems = breadcrumbs || [
  { name: 'Главная', url: SITE_CONFIG.siteUrl },
  { name: 'База знаний', url: `${SITE_CONFIG.siteUrl}/kb` },
  { name: title, url: canonicalUrl },
];

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: breadcrumbItems.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.name,
    item: item.url,
  })),
};
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO -->
  <title>{title} | База знаний Sendogram</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalUrl}>
  
  <!-- Open Graph -->
  <meta property="og:type" content="article">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:site_name" content="Sendogram">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>
  
  <!-- JSON-LD -->
  {faqSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  )}
  {articleSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  )}
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  
  <!-- Plausible Analytics -->
  {SITE_CONFIG.isProd && (
    <script defer data-domain={SITE_CONFIG.plausibleDomain} src="https://plausible.io/js/script.js"></script>
  )}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --sl-color-white: #fff;
      --sl-color-gray-1: #eee;
      --sl-color-gray-2: #c2c2c2;
      --sl-color-gray-3: #8b8b8b;
      --sl-color-gray-4: #585858;
      --sl-color-gray-5: #383838;
      --sl-color-gray-6: #272727;
      --sl-color-black: #181818;
      --sl-color-accent: #4f46e5;
      --sl-color-text-accent: #818cf8;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: var(--sl-color-black);
      color: var(--sl-color-white);
      line-height: 1.6;
      margin: 0;
      padding: 0;
    }
  </style>
</head>
<body>
  <header class="site-header">
    <div class="container">
      <a href="/" class="logo">Sendogram</a>
      <nav>
        <a href="/blog">Блог</a>
        <a href="/kb">База знаний</a>
        <a href={SITE_CONFIG.appUrl} class="cta-button">Войти</a>
      </nav>
    </div>
  </header>

  <main class="container">
    <article class="kb-page">
      <Breadcrumbs breadcrumbs={breadcrumbs} currentPage={title} />
      
      <header class="page-header">
        <h1>{title}</h1>
        <p class="page-description">{description}</p>
      </header>

      <LastUpdated date={updatedAt} />

      <div class="page-content">
        <slot />
      </div>

      {faqs.length > 0 && (
        <section class="faq-section">
          <h2>Часто задаваемые вопросы</h2>
          {faqs.map(faq => (
            <details class="faq-item">
              <summary>{faq.question}</summary>
              <div class="faq-answer">{faq.answer}</div>
            </details>
          ))}
        </section>
      )}
    </article>
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>Ресурсы</h3>
          <ul>
            <li><a href="/blog">Блог</a></li>
            <li><a href="/kb">База знаний</a></li>
            <li><a href="/rss.xml">RSS</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h3>Продукт</h3>
          <ul>
            <li><a href={SITE_CONFIG.appUrl}>Sendogram</a></li>
            <li><a href={`${SITE_CONFIG.appUrl}/pricing`}>Тарифы</a></li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Sendogram. Все права защищены.</p>
      </div>
    </div>
  </footer>

  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }
    
    .site-header {
      padding: 1.5rem 0;
      border-bottom: 1px solid var(--sl-color-gray-5);
      margin-bottom: 2rem;
    }
    
    .site-header .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--sl-color-white);
      text-decoration: none;
    }
    
    .site-header nav {
      display: flex;
      gap: 1.5rem;
      align-items: center;
    }
    
    .site-header nav a {
      color: var(--sl-color-gray-2);
      text-decoration: none;
      transition: color 0.2s;
    }
    
    .site-header nav a:hover {
      color: var(--sl-color-white);
    }
    
    .cta-button {
      padding: 0.5rem 1rem !important;
      background: var(--sl-color-accent) !important;
      color: white !important;
      border-radius: 0.5rem;
      font-weight: 600;
    }
    
    .kb-page {
      margin: 2rem 0 4rem;
    }
    
    .page-header {
      margin-bottom: 2rem;
    }
    
    .page-header h1 {
      font-size: 2.5rem;
      line-height: 1.2;
      margin: 1rem 0;
      color: var(--sl-color-white);
    }
    
    .page-description {
      font-size: 1.25rem;
      color: var(--sl-color-gray-2);
      margin: 1rem 0;
    }
    
    .page-content {
      font-size: 1.125rem;
      line-height: 1.8;
    }
    
    .page-content :global(h2) {
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      font-size: 1.75rem;
    }
    
    .page-content :global(h3) {
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      font-size: 1.375rem;
    }
    
    .page-content :global(p) {
      margin: 1rem 0;
    }
    
    .page-content :global(a) {
      color: var(--sl-color-text-accent);
      text-decoration: none;
    }
    
    .page-content :global(a:hover) {
      text-decoration: underline;
    }
    
    .page-content :global(code) {
      background: var(--sl-color-gray-6);
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      font-size: 0.9em;
    }
    
    .page-content :global(pre) {
      background: var(--sl-color-gray-6);
      padding: 1rem;
      border-radius: 0.5rem;
      overflow-x: auto;
    }
    
    .page-content :global(pre code) {
      background: none;
      padding: 0;
    }
    
    .faq-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid var(--sl-color-gray-5);
    }
    
    .faq-section h2 {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
    }
    
    .faq-item {
      margin-bottom: 1rem;
      background: var(--sl-color-gray-6);
      border-radius: 0.5rem;
      padding: 1rem;
    }
    
    .faq-item summary {
      cursor: pointer;
      font-weight: 600;
      color: var(--sl-color-white);
      list-style: none;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .faq-item summary::after {
      content: '+';
      font-size: 1.5rem;
      color: var(--sl-color-gray-3);
    }
    
    .faq-item[open] summary::after {
      content: '−';
    }
    
    .faq-answer {
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid var(--sl-color-gray-5);
      color: var(--sl-color-gray-2);
    }
    
    .site-footer {
      border-top: 1px solid var(--sl-color-gray-5);
      padding: 3rem 0 2rem;
      margin-top: 4rem;
    }
    
    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin-bottom: 2rem;
    }
    
    .footer-section h3 {
      font-size: 1rem;
      margin-bottom: 1rem;
      color: var(--sl-color-white);
    }
    
    .footer-section ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .footer-section li {
      margin-bottom: 0.5rem;
    }
    
    .footer-section a {
      color: var(--sl-color-gray-3);
      text-decoration: none;
      transition: color 0.2s;
    }
    
    .footer-section a:hover {
      color: var(--sl-color-white);
    }
    
    .footer-bottom {
      text-align: center;
      padding-top: 2rem;
      border-top: 1px solid var(--sl-color-gray-5);
      color: var(--sl-color-gray-3);
      font-size: 0.875rem;
    }
    
    @media (max-width: 768px) {
      .page-header h1 {
        font-size: 1.875rem;
      }
      
      .page-description {
        font-size: 1.125rem;
      }
      
      .page-content {
        font-size: 1rem;
      }
    }
  </style>
</body>
</html>
